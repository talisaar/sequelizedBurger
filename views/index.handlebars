
<h1>BURGERS!</h1>

<h2>Burgers that are NOT devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless this.dataValues.devoured}}
      <li>
        {{this.dataValues.name}}
        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button type="submit">DEVOUR!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured</h2>

<ul>
  {{#each burgers}}
    {{#if this.dataValues.devoured}}
      <li>
        {{this.dataValues.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">THROW UP!</button>
        </form>
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="newburger" name="name">
  </div>
  <button type="submit">Add burger</button>
</form>
